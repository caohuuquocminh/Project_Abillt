<h1>Store Listing</h1>
Sort By: 
<li><%= link_to "All Products", store_path %></li>

<h2> <strong> Blind english </strong></h2>

<div class="dropdown">
  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Dropdown Example
  <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li><a href="#">HTML</a></li>
    <li><a href="#">CSS</a></li>
    <li><a href="#">JavaScript</a></li>
  </ul>
</div>

<table id="products">
  <tr>
    <th><%= sort_link @search, :name, "Product Name" %></th>
    <th><%= sort_link @search, :price, "Price" %></th>    
    <th><%= sort_link @search, :category_id, "Category" %></th>
    <th><%= sort_link @search, :rating, "Review" %></th>
    <th><%= sort_link @search, :app_img, "Image" %></th>

  </tr>
<% @products.each do |product| %>
  <tr>
    <td><%= link_to(product.name, product) %></td>
    <td><%= number_to_currency(product.price) %></td>
    <td><%= link_to(product.category.name, product) %></td>
    <td><%= product.reviews.average(:rating) %></td>
    
    <td class="image-description">
        <td><%= image_tag product.app_img.url(:app_index) %></td>
    </td>
  </tr>
<% end %>
</table>




   