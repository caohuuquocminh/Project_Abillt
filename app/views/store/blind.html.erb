<!-- Sort begin -->



<table id="products">
  <tr>
    <li><%= sort_link @search, :price, "Price" %></li>
    <li><%= sort_link @search, :name, "Product Name" %></li> 
    <li><%= sort_link @search, :average, "Review" %></li>
  </tr>


<table id="products">
  <tr>
    <th><%= sort_link @search, :name, "Product Name" %></th>
    <th><%= sort_link @search, :price, "Price" %></th>    
    <th><%= sort_link @search, :average, "Review" %></th>

  </tr>
<% @products.each do |product| %>
  <tr>
    <td><%= link_to(product.name, product) %></td>
    <td><%= number_to_currency(product.price) %></td>
    <td><%= product.reviews.average(:rating) %></td>
    
    <td class="image-description">
        <td><%= image_tag product.app_img.url(:app_index) %></td>
    </td>
  </tr>
<% end %>
</table>


