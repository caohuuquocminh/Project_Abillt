<div class="row fadeIn animated">
	<div class="col-md-6">
		<%= image_tag @app.app_img.url(:app_show), class: "img-responsive" %>
	</div>

	<div class="col-md-6">
		<h2 class="title-style-2"><%= App.human_attribute_name(:App_Name) %>: <%= @app.name %><span class="title-under"></span></h2>
		<h4><%= App.human_attribute_name(:Type) %>: <%= @app.type %></h4>
		<h4><%= Category.human_attribute_name(:Kategorie)%>: <%= @app.category.name %></h4>
		<h2 class="title-style-2">Durchschnittliche Bewertung</h2>
		<div class="average-review-rating" data-score=<%= @average_review %>></div>
		<span class="number-of-reviews"><h4>Basierend auf &nbsp;<%= @app.reviews.count %>&nbsp;Bewertungen</h4></span>
		
		<h4><%= App.human_attribute_name(:Beschreibung) %>: <%= @app.description %></h4>

		<% @app.operations.each do |operatingsystem| %>
		<h4>System: <%= operatingsystem.id %> </h4>
		<h4>Information: <%= operatingsystem.information %> </h4>
		<h4><a href=<%= operatingsystem.link %> >Link</a></h4>
		<% end %>

		<h4><%= App.human_attribute_name(:Entwickler)%>: <%= @app.developer %></h4>
		<h4><%= App.human_attribute_name(:Preis) %>: <%= @app.price %>€</h4>
		<h4><%= App.human_attribute_name(:Price_Pro) %>: <%= @app.price_pro %>€</h4>

		<h4>Languages Avilable:
			<% @app.languages.each do |language| %>
			<%= language.name %> **
			<% end %>
		</h4>	
	</div>

	<div class="col-md-6">
		<%= image_tag @app.image1.url(:app_show), class: "img-responsive" %>
		<%= image_tag @app.image2.url(:app_show), class: "img-responsive" %>
		<%= image_tag @app.image3.url(:app_show), class: "img-responsive" %>
		<%= image_tag @app.image4.url(:app_show), class: "img-responsive" %>
		<%= image_tag @app.image5.url(:app_show), class: "img-responsive" %>
	</div>

	<div class="form-group col-md-6">
		<%= link_to "Bewerten", new_app_review_path(@app), class: 'btn btn-primary pull-left' %>
		<%= link_to "Zurück", root_path, class: 'btn btn-primary pull-right' %>
    </div>

</div> <!-- /.row -->
<br></br>

