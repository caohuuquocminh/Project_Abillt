<% if params[:category].blank? && params[:search].blank? %>
<% @categories_list.each do |category| %>
<div class="our-team">
	<div class="container">
		<h2 class="title-style-2" aria-hidden="false" tabindex=0><h3 class="offscreen"> Dieser Abschnitt enthält</h3><%= category.name %> Apps<span class="title-under"></span></h2>
		<div class="row" style="background:#fff;border-radius: 5px;padding-top:50px">
			<% @apps_all.each do |apps| %>
			<% if apps.category_id == category.id  %>
			<div class="col-md-2 col-sm-2">
				<div class="team-member">
					<div class="thumnail"> 
						<a tabindex=0 role=button href="/apps/<%= apps.id %>">
							<%= image_tag apps.app_img.url(:app_index) , alt: apps.app_img_alt %>
						</a>
					</div>
					<p class="app-name" aria-hidden="false"><h3 class="offscreen"> Name der Anwendung ist </h3><%= link_to apps.name, app_path(apps) %></p>
					<p class="app-name" aria-hidden="false"><h3 class="offscreen"> Der Preis ist </h3><%= apps.price %>€</p>
					<a tabindex=0 href="/apps/<%= apps.id %>">
						<h3 class="offscreen"> Durchschnittliche Bewertung der Anwendung ist </h3>
						<div class="average-review-rating" data-score=<%= apps.reviews.average(:rating)%>></div> 
					</a>
				</div>
				<br></br>
			</div>
			<% end %>
			<% end %>
			<div>
				<h4 style="padding-top: 30px" aria-hidden="false" role=button><h3 class="offscreen"> Klicken Sie hier für </h3><%= link_to "Mehr Apps...", controller: "categories", 
				action: "show", id: category.id %></h4>
			</div>
		</div>
		<br></br>
	</div>
</div>
<% end %>
<br/>

<% elsif !params[:category].blank? && params[:search].blank? %>
<div class="row">
	<% @apps_all.each do |apps| %>
		<div class="col-md-2 col-sm-2">
		<div class="team-member">
			<div class="thumnail">
				<a href="/apps/<%= apps.id %>"><%= image_tag apps.app_img.url(:app_index) %></a>
			</div>
			<p><%= link_to apps.name, app_path(apps) %></p>
			<p class="app-name"><%= apps.price %>€</p>
			<div class="average-review-rating" data-score=<%= apps.reviews.average(:rating) %>></div>
		</div><br></br>
	</div>
	<% end %>
</div>

<% elsif %>
<div class="row">
	<% @apps_all.each do |apps| %>
		<div class="col-md-2 col-sm-2">
		<div class="team-member">
			<div class="thumnail">
				<a href="/apps/<%= apps.id %>"><%= image_tag apps.app_img.url(:app_index) %></a>
			</div>
			<p><%= link_to apps.name, app_path(apps) %></p>
			<p class="app-name"><%= apps.price %>€</p>
			<div class="average-review-rating" data-score=<%= apps.reviews.average(:rating) %>></div>
		</div><br></br>
	</div>
	<% end %>
</div>
<% end %>

<script>
	$('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score')
		}
	});
</script>