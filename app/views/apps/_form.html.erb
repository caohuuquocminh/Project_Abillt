<%= simple_form_for @app, :html => { :multipart => true } do |f| %>
	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Wählen Sie eine Kategorie") %>
	<%= f.file_field :app_img: "Logo der App" %>
	<%= f.input :name, label: "Name der App" %>
	<%= f.input :description: "Beschreibung der App" %>
	<%= f.input :link: "Link zur Downloadseite"  %>
	<%= f.input :developer: "Entwickler der App" %>
	<%= f.input :operation: "Betriebssystem der App" %>
	<%= f.input :price: "Preis der App" %>
	<%= f.button :submit: "Bestätigen" %>

<% end %>

