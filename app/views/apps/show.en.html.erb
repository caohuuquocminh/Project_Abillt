				<!-- <div class="team-member"> -->
					<div class="thumnail">
						<%= image_tag @app.image1.url(:app_show), class: "img-responsive",:size => "150x150" %>
					</div>
				<!-- </div> -->	
			</div>
			<div class="col-md-3 col-sm-3">
				<!-- <div class="team-member"> -->
					<div class="thumnail">
						<%= image_tag @app.image2.url(:app_show), class: "img-responsive",:size => "150x150" %>
					</div>
