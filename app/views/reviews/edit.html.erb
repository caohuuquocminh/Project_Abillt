<h1>Bearbeiten Bewertung</h1>

<%= simple_form_for([@app, @review]) do |f| %>
		<div id="rating-form">
		<label>Wertung</label>
		</div>
			<%= f.input :comment %>
			<%= f.button :submit %>
<% end %>	
<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>