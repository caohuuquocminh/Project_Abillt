<h2 class="title-style-3" aria-hidden="false">Leichte Sprache<span class="title-under"></span></h2>
<% @help_items.each do |help_item| %>
<div class="row white-border">
    <% unless help_item.heading.blank? %>
    <div class="col-sm-12 col-md-12">
      <p aria-hidden="false"><%= help_item.heading %></p>    
    </div>
    <% end %>
    <% unless help_item.photo.blank? %>
      <div class="col-sm-6 col-md-3">
          <%= image_tag (help_item.photo), class: "help-image" ,alt: help_item.photo_alt%>
      </div> 
    <% end %><br>
    <div class="col-sm-3 col-md-9">
      <% unless help_item.title1.blank? %>
      <p aria-hidden="false" class="help-title"><%= help_item.title1 %></p>
      <% end %>
      <% unless help_item.title2.blank? %>
      <p aria-hidden="false" class="help-title"><%= help_item.title2 %></p>
      <% end %>
      <% unless help_item.bullet_heading.blank? %>
      <p aria-hidden="false" class="help-title"><strong><%= help_item.bullet_heading %></strong></p>
      <% end %>
      <ul>
        <% unless help_item.bullet1.blank? %><li class="contact-item"><%= help_item.bullet1 %></li><% end %>
        <% unless help_item.bullet2.blank? %><li class="contact-item"><%= help_item.bullet2 %></li><% end %>
        <% unless help_item.bullet3.blank? %><li class="contact-item"><%= help_item.bullet3 %></li><% end %>
        <% unless help_item.bullet5.blank? %><li class="contact-item"><%= help_item.bullet5 %></li><% end %>
      </ul>
    </div>
</div><br />
<% end %>