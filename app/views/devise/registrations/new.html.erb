<h2 class="title-style-2">Sign up<span class="title-under"></span></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="row">

    <div class="form-group col-md-6">
      <h4>First Name:</h4> 
      <input type="text" name="name" class="form-control" placeholder="First Name*" required>

      <h4>Last Name:</h4> 
      <input type="text" name="name" class="form-control" placeholder="Last Name*" required>

      <h4>Username:</h4> 
      <input type="text" name="name" class="form-control" placeholder="Username*" required>

      <h4>Date of birth:</h4> 
      <input type="date" name="date" class="form-control" placeholder="Last Name*" required>

      <h4>Email:</h4> 
      <input type="email" name="email" class="form-control" placeholder="Email*" required>

      <h4>Password:</h4> <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <input type="password" name="password" class="form-control" placeholder="Password*" required>

      <h4>Confirm Password:</h4> 
      <input type="password_confirmation" name="password_confirmation" class="form-control" placeholder="Confirm Password*" required>
      <br/>
      <div class="form-group">
      <%= f.submit 'Sign Up', class: 'btn btn-primary pull-left' %>
      </div>
    </div>
    <div class="form-group alerts">
                        
      <div class="alert alert-success" role="alert">
        
      </div>

      <div class="alert alert-danger" role="alert">
        
      </div>
      
    </div>  
    
    
</div>
