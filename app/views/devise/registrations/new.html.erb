<legend>Registrieren </legend>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <h2><%= devise_error_messages! %></h2>

<div class="row">
<div class="col-md-6">
  <div class="field">
    <%= f.label :first_name, "Vorname (Optional):"  %>
    <%= f.text_field :first_name, autofocus: true, class:"form-control"%>
    </div>
    <div class="field">
        <%= f.label :last_name, "Nachname (Optional):"  %>
        <%= f.text_field :last_name, autofocus: true,class:"form-control" %>
    </div>
    <div class="field">
        <%= f.label :username, "Benutzername:"  %>
        <%= f.text_field :username, autofocus: true,class:"form-control" %>
    </div>
    <div class="field">
        <%= f.label :email, "Email:"  %>
        <%= f.email_field :email, autofocus: true, class:"form-control" , placeholder:"joe@example.com"%>
    </div>

    <div class="field">
        <%= f.label :birthday, "Geburtsdatum (Optional):"  %>
        <%= f.date_field :birthday,autofocus: true, class:"form-control" %>
    </div>
    <div class="field">
        <%= f.label :password, "Passwort:" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control" %>
    </div>
    <div class="field">
        <%= f.label :password_confirmation, "Passwort wiederholen:" %>
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class:"form-control"%><br />
    </div>
    <div class="actions">
        <%= f.submit "Registrieren", class: 'btn btn-primary pull-left' %><br />
    </div>
</div>

    <div class="form-group alerts">
                        
      <div class="alert alert-success" role="alert">
        
      </div>

      <div class="alert alert-danger" role="alert">
        
      </div>
      
    </div>     
</div>
<% end %>

<%= render "devise/shared/links" %>