<% @title="Zappatory.com - Verzeichnis für assistive Apps -Bearbeiten" %>
<div class="container">
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

      <h2 class="title-style-3" aria-hidden="false">Bearbeiten<%= resource_name.to_s.humanize %><span class="title-under"></span></h2>
      <div class="col-md-8" style="float:left; margin-left:-3px">
            <div class="row white-border">
                  <fieldset>
                        
                        <div class="form-group col-md-12">
                              <%= f.label :first_name, "Vorname (Optional):", style:"margin-top:10px" %>
                              <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
                        </div>
                        <div class="form-group col-md-12">
                              <%= f.label :last_name, "Nachname (Optional):"  %>
                              <%= f.text_field :last_name, autofocus: true, class:"form-control"%>
                        </div>
                        <div class="form-group col-md-12">
                              <%= f.label :username, "Benutzername:"  %>
                              <%= f.text_field :username, autofocus: true, class:"form-control" %>
                        </div>
                        <div class="form-group col-md-12">
                              <%= f.label :birthday, "Geburtsdatum (Optional):"  %>
                              <%= f.date_field :birthday, autofocus: true, class:"form-control"%>
                        </div>
                        <div class="form-group col-md-12">
                              <%= f.label :email, "Email:"  %>
                              <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"joe@example.com" %>
                        </div>
                        <div class="form-group col-md-12">
                              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Warte auf Bestätigung: <%= resource.unconfirmed_email %></div>
                              <% end %>

                              <%= f.label :password, "Neues Passwort:" %>
                              <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                              <% end %>
                              <%= f.password_field :password, autocomplete: "off", class:"form-control" , placeholder:"Lassen Sie das Feld leer, falls sie das Passwort nicht ändern möchten."%>
                        </div>
                        <div class="form-group col-md-12">
                              <%= f.label :password_confirmation, "New Passwort wiederholen:" %> 
                              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
                        </div>
                        <div class="form-group col-md-12">
                              <%= f.label :password, "Aktuelles Passwort:" %>
                              <%= f.password_field :current_password, autocomplete: "off", class:"form-control" , placeholder:"Ihr aktuelles Passwort ist nötig um Änderungen zu machen."%>
                        </div>
                        <div class="form-group col-md-12">
                              <%= f.submit 'Konto aktualisieren', class: 'btn btn-primary pull-left', style:"margin-top:5px" %>                                    
                        </div>
                        
                  </fieldset>
                  
            </div>
      </div>
      <div class="col-md-4 white-border" style="float:right; margin-right:-3px">
            <fieldset>
                  <p aria-hidden="false" style="margin-top:10px"><b>Mein Konto löschen</b></p>
                  <p aria-hidden="false">Sie sind nicht zufrieden?</p>
                  <%= button_to "Mein Konto löschen", registration_path(resource_name), data: {confirm: "Sind Sie sicher?" }, method: :delete, class: "btn btn-primary", :style =>"margin-bottom:15px"%><br>
            </fieldset>
      </div><br>
      <% end %>
</div><br>