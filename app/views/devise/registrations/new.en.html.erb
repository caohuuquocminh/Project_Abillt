<!-- <h2>Sign up</h2> -->
<h2 class="title-style-2">Sign up<span class="title-under"></span></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
<div class="col-md-6">
   <div class="field">
    <h4>First Name:</h4>
    <%= f.text_field :first_name, autofocus: true, class:"form-control", placeholder:"First Name"%>
    </div>
    <div class="field">
        <h4>Last Name:</h4>
        <%= f.text_field :last_name, autofocus: true, class:"form-control", placeholder:"Last Name" %>
    </div>
    <div class="field">
        <h4>Username:</h4>
        <%= f.text_field :username, autofocus: true, class:"form-control", placeholder:"Username*" %>
    </div>
    <div class="field">
        <h4>Email:</h4>
        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email*" %>
    </div>
    <div class="field">
        <h4>Date of Birth:</h4>
        <%= f.date_field :birthday, autofocus: true, class:"form-control", placeholder:"Date of birth" %>
    </div>
    <div class="field">
        <h4>Password: &nbsp;<% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %></h4>
        
        <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password*" %>
    </div>
    <div class="field">
        <h4>Password Confirmation:</h4>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Password*" %><br />
    </div>
    <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary pull-left' %><br />
    </div>
      <br />
</div>
    

    

    

    

